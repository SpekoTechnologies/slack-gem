<% title("Slack Profiles")%>
<h1>Slack Profiles</h1>
<p><%= link_to 'New Profile', new_slack_profile_path, class: 'btn btn-lg btn-success' %></p>

<div class="table-responsive">
  <table class='table table-striped table-hover'>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Channels</th>
    </tr>
    <% @slack_profiles.each do |slack_profile| %>
      <tr>
        <td><%= link_to slack_profile.name, slack_profile_path(slack_profile)%></td>
        <td><%= slack_profile.description %></td>
        <td><%= slack_profile.tags_on(:channels).map(&:name) %></td>
      </tr>
    <% end %>
  </table>
</div>
